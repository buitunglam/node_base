<div class="mt-4">
    <div class="d-flex flex-row container justify-content-around flex-wrap">
        {{#each courses}}

        <div class="card" style="width: 18rem; margin-bottom:30px">
            <a href="/courses/{{this.slug}}">
                <img src={{this.image}} class="card-img-top" alt="...">
            </a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Mua</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>